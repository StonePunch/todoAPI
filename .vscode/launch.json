  /**
   * Debuging Compiled Node.js code
   * Source:
   * * https://medium.com/@drcallaway/debugging-es6-in-visual-studio-code-4444db797954 *
   */
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}/src/app.js", // Entry point for the application
      "outFiles": [
        "${workspaceRoot}/.compiled/**/*.js" // Compiled file location, with the source maps
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Current File",
      "program": "${file}",
      "outFiles": [
        "${workspaceRoot}/.compiled/**/*.js"
      ]
    }
  ]
}